{
    "name": "netsper/weight-conversions",
    "description": "Weight conversions in PHP",
    "keywords": [
        "Netsper",
        "weight-conversions"
    ],
    "homepage": "https://github.com/netsper/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Barış",
            "email": "baris@netsper.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Netsper\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netsper\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
